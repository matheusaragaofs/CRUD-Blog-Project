<%- include('../../partials/header')  %>
<%- include('../../partials/homenavbar')  %>

<body>
    <br>
    <div class="container">
        <% if (result.next== true) { %>
        <h4>Tem mais conteúdo a frente</h4>
        <% } else { %>
        <h4>Não há mais nada há ser exibido</h4>
        <% } %>


        <% result.articles.rows.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <h2 class='display-4'><%=article.title  %> </h2>

            </div>
            <div class="card-body">
                <a class='btn btn-success' href="/<%=article.slug%> ">Ler artigo</a>
            </div>
        </div>
        <br>


        <% }) %>
        <div class="row">
            <div class="col">
                <% if (result.page > 2) { %>
                <a style = 'float: left;'href="/articles/page/<%=result.page -1 %>"> &lt&lt&ltPrev</a>
                
                <% } else if (result.page == 2) { %>
                    <a style= 'float:left' href="/"> &lt&lt&ltPrev</a>
                    <% } %>
                    <% if (result.next) { %>
                        
                <a  style= 'float:right' href="/articles/page/<%=result.page +1 %>">Next>>></a>
                <% } %>

            </div>
        </div>
        
    
        <hr>
    </div>
</body>
<%- include('../../partials/footer')  %>